<%= form_with(model: category, class:"new-category-form") do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="category-form-content">
    <div class="mb-3 field">
      <%= form.text_field :name, class: "form-control", placeholder: "Category name" %>
    </div>
    <div class="field">
      <label for="icon" class="form-label">Icon</label>
      <select name="category[icon]" id="icon" class="form-select">
        <% Dir.glob('app/assets/images/icons/*.svg').each do |icon| %>
          <% icon_name = File.basename(icon, '.*') %>
            <option value="<%= icon_name %>">
              <%= icon_name.capitalize.tr('_', ' ') %>
            </option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-btn-section">
    <%= form.submit "Save", class: "btn btn-primary form-btn" %>
  </div>
<% end %>
